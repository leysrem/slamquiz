{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ question.text }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('question_index') }}"> {{ 'back to list'|trans }}</a>

    <a class="btn btn-primary" href="{{ path('question_edit', {'id': question.id}) }}">{{ 'edit'|trans }}</a>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
