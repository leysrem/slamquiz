{% extends 'base.html.twig' %}

{% block title %}Question index{% endblock %}

{% block body %}
    <h1>{{ 'Question index'|trans }} </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                 <th>Categories</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.text }}</td>
                <td> {% for categorie in question.categories %} {{ categorie.shortname }}  {% endfor %} </td>
                <td>
                    

                    <a href="{{ path('question_show', {'id': question.id}) }}">show</a>
                    
                    <a href="{{ path('question_edit', {'id': question.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
      <a href="{{ path('question_new', {'nb': 2}) }}"> 2 answers</a>,
    <a href="{{ path('question_new', {'nb': 3}) }}"> 3 answers</a>
    or <a href="{{ path('question_new', {'nb': 4}) }}"> 4 answers</a>
{% endblock %}
